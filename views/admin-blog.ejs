<html>
    <head>
        <title>
            Blogs
        </title>
    </head>
    <style>
        .navbar {
  overflow: hidden;
  background-color: #333;
  position: fixed;
  top: 0;
  height:80px;
  width: 100%;
  line-height: 40px;
  vertical-align: middle;
  z-index: 1;
}

.navbar button, input[type="submit"], input[type="reset"] {
	background: none;
	color: inherit;
	border: none;
	padding: 0;
	font: inherit;
	cursor: pointer;
	outline: inherit;
}

.navbar a ,.navbar button {
  float: left;
  display: block;
  color: #f2f2f2;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 20px;
}

.navbar a:hover,
.navbar .active, .navbar button  {
  background: #ddd;
  color: black;

}
    </style>
    <body>
        <%- include('./includes/navigation.ejs') %>
<h1>--Blogs--</h1>
<% if(blog.length>0) { %>
    <% for( let i = blog.length-1; i>=0 ;i-- ) { %>
          <div>
            <h3> <%=blog[i].title %> </h3>
            <h3><%= blog[i].date %> </h3>
            <p>By: <%=blog[i].userName%> </p> 
           <a href="/full-blog/<%=blog[i]._id %>" ><button>Read More</button></a>
          <a href="/delete-blog?blogid=<%= blog[i]._id %>"><button>DELETE!</button></a> 
          </div>
          <br> <br>
          <% } %>
<% } else { %>

    <h1>No Blogs</h1>
    <% } %>

    </body>
</html>